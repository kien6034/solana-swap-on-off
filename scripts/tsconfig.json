{
  "compilerOptions": {
    "composite": true,
    "target": "es6",
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",  
  },
  "references": [
    {
      "path": "../sdk/src"
    }
  ],
  "include": [
    "./.wallets/**/*"
  ],
}